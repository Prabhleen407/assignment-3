<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Site - <%= site.site %></title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">
  <%- include('partials/navbar', { page: '' }) %>

  <div class="container mx-auto">
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Edit Site: <%= site.site %></h1>
          <p class="py-6">Edit The Site Here</p>
        </div>
      </div>
    </div>

    <form action="/editSite" method="POST" class="bg-pink-300 mt-8 grid gap-6">

      <div>
        <label class="block font-bold">Site ID</label>
        <input type="text" name="siteId" value="<%= site.siteId %>" readonly
               class="input input-bordered w-full bg-gray-100 cursor-not-allowed" />
      </div>

      <div>
        <label class="block font-bold">Site</label>
        <input type="text" name="site" value="<%= site.site %>" required class="input input-bordered w-full" />
      </div>

      <div>
        <label class="block font-bold">Image</label>
        <input type="url" name="image" value="<%= site.image %>" required class="input input-bordered w-full" />
      </div>

      <div>
        <label class="block font-bold">Date</label>
        <input type="number" name="date" value="<%= site.date %>" required class="input input-bordered w-full" />
      </div>

      <div>
        <label class="block font-bold">Date Type</label>
        <input type="text" name="dateType" value="<%= site.dateType %>" required class="input input-bordered w-full" />
      </div>

      <div>
        <label class="block font-bold">Designated</label>
        <input type="number" name="designated" value="<%= site.designated %>" required class="input input-bordered w-full" />
      </div>

      <div>
        <label class="block font-bold">Location</label>
        <input type="text" name="location" value="<%= site.location %>" required class="input input-bordered w-full" />
      </div>

      <div>
        <label class="block font-bold">Province or Territory</label>
        <select name="provinceOrTerritoryCode" class="select select-bordered w-full" required>
          <% provincesAndTerritories.forEach(provOrTerr => { %>
            <option value="<%= provOrTerr.code %>" <%= (site.provinceOrTerritoryCode == provOrTerr.code) ? "selected" : "" %>>
              <%= provOrTerr.name %>
            </option>
          <% }) %>
        </select>
      </div>

      <div>
        <label class="block font-bold">Description</label>
        <textarea name="description" rows="4" class="textarea textarea-bordered w-full"><%= site.description %></textarea>
      </div>

      <div>
        <label class="block font-bold">Latitude</label>
        <input type="number" step="0.00000001" name="latitude" value="<%= site.latitude %>" required class="input input-bordered w-full" />
      </div>

      <div>
        <label class="block font-bold">Longitude</label>
        <input type="number" step="0.00000001" name="longitude" value="<%= site.longitude %>" required class="input input-bordered w-full" />
      </div>

    <div>
      <button type="submit" class="btn w-full">Update Site</button>
    </div>

    <div>
      <a href="/deleteSite/<%= site.siteId %>" class="btn w-full">Delete Site</a>
    </div>

  </form>
</div>
</body>

</html>